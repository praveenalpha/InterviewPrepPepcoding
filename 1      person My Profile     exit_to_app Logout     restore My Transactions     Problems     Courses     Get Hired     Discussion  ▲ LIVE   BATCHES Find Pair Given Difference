#include <bits/stdc++.h>
//////////
using namespace std;
void solve(){
    int t;
    cin>>t;
    while(t--){
        int l,n;
        cin>>l>>n;
        vector<int> arr(l);
        for(int i=0;i<l;i++)
            cin>>arr[i];
        bool flag = false;
        for(int i=0;i<l;i++){
            for(int j=i+1;j<l;j++){
                if(abs(arr[i]-arr[j]) == n)
                {
                    flag = true;
                    break;
                }
            }
        }
        if(flag)
            cout<<1<<'\n';
        else
            cout<<-1<<'\n';
    }
}
int main() {
    solve();
	//code
	return 0;
}
